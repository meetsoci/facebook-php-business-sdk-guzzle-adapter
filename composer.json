{
    "name": "samlitowitz/facebook-php-business-sdk-guzzle-adapter",
    "description": "A Guzzle adapter for the Facebook PHP Business SDK",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Sam Litowitz",
            "email": "samlitowitz@users.noreply.github.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php":"^7.2 || ^8.0",
        "guzzlehttp/guzzle": "^7.0",
        "facebook/php-business-sdk": "^12.0"
    },
    "autoload": {
        "psr-4": {
            "FacebookGuzzleAdapter\\": "src/"
        }
    },
    "autoload-dev": {
        "FacebookGuzzleAdapter\\": ["src/", "tests/"]
    },
    "require-dev": {
        "phpunit/phpunit": "9.0.0"
    }
}
