{
    "name": "samlitowitz/facebook-php-business-sdk-guzzle-adapter",
    "description": "A Guzzle adapter for the Facebook PHP Business SDK",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Sam Litowitz",
            "email": "samlitowitz@users.noreply.github.com"
        }
    ],
    "minimum-stability": "stable",
    "repositories": [
        {
			"type": "vcs",
			"url": "https://github.com/meetsoci/facebook-php-business-sdk.git"
		}
    ],
    "require": {
        "php":">=8.0",
        "guzzlehttp/guzzle": "^6.5 || ^7.0",
        "facebook/php-business-sdk": "18.0.2.72"
    },
    "autoload": {
        "psr-4": {
            "FacebookGuzzleAdapter\\": "src/"
        }
    },
    "autoload-dev": {
        "FacebookGuzzleAdapter\\": ["src/", "tests/"]
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0.0"
    }
}
